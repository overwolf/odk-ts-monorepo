{
  "compilerOptions": {
    "module": "CommonJS",
    "target": "ES2018",
    "moduleResolution": "node",
    "outDir": "./dist",
    "declaration": true,
    "sourceMap": true,
    "preserveConstEnums": true,
    "stripInternal": true,

    "lib": ["ES2018", "DOM"],

    "typeRoots": ["./types", "../../node_modules/@types"],
    "types": ["node"]
  },
  "exclude": ["node_modules", "test", "dist", "**/*spec.ts"]
}
